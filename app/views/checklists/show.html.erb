<h2><%= @checklist.title %></h2>
<p><%= @checklist.description %></p>

<%= link_to "Back", root_path, class: "btn grey darken-2" %>
<%= link_to "Edit", edit_checklist_path(@checklist), class: "btn orange accent-3" %>
<%= link_to "Delete", checklist_path(@checklist), method: :delete, data: { confirm: "Are you sure?" }, class: "btn red darken-2" %>

<h4>All questions</h4>
<% @questions.each do |question| %>
  <div class="card">
    <div class="card-content">
      <div class="card-title"><%= question.title %></div>
      <div class="card-text"><%= question.description %></div>
    </div>
  </div>
<% end %>
<%= paginate @questions %>
