<div class="checklist card-panel">
    <p class="flow-text">CheckLists</p>
      <% if @checklists.present? %>
        <% @checklists.each do |checklist| %>
          <div class="row">
            <div class="col s12">
              <div class="card blue-grey darken-1">
                <div class="row card-content white-text">
                  <div class="col s10">
                    <%= link_to(checklist) do %>
                      <span class="card-title white-text"><%= checklist.title %></span>
                      <p class="white-text"><%= checklist.description %></p>
                    <% end %>
                  </div>
                  <div class="col s2 btnBox" >
                      <%= link_to edit_checklist_url(checklist) do %>
                        <span class="btn-floating btn-large cyan mx3"><i class="material-icons">edit</i></span>
                      <% end %>
                      <%= link_to checklist_path(checklist),  method: :delete, data: { confirm: "Are you sure?" } do %>
                        <span class="btn-floating btn-large red mx3"><i class="material-icons">delete</i></span>
                      <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <%= link_to new_checklist_path do %>
          <span class="btn-small mr10"><i class="material-icons right">add</i>New Checklist</span>
        <% end %>
        <%= paginate @checklists %>  
      <% else %>
        <div class="card-content">
            <p>Your list is empty</p>
        </div>
        <%= link_to new_checklist_path do %>
          <span class="btn-small mr10"><i class="material-icons right">add</i>New Checklist</span>
        <% end %>
      <% end %>
  </div>