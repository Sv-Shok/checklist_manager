<% @checklists.each do |checklist| %>
  <div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= link_to checklist.title, checklist %></span>
          <p><%= checklist.description %></p>
          <%= link_to "Edit", edit_checklist_path(checklist) %>
          <%= link_to "Delete", checklist_path(checklist), method: :delete, data: { confirm: "Are you sure?" } %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= link_to "New Checklist", new_checklist_path %>
